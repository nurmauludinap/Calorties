<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/primary"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginStart="20dp"
                android:id="@+id/iv_profile"
                android:src="@drawable/ic_account"
                android:layout_width="86dp"
                android:layout_height="86dp"
                app:tint="@color/white"
                android:layout_centerInParent="true" />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/usernameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/emailTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username@gmail.com"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/bbTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TB: 156 | BB: 60 | Gender: Male"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingHorizontal="18dp"
            android:paddingVertical="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_account"
                    app:tint="@color/grey" />

                <TextView
                    android:id="@+id/changeProfileTxt"
                    android:paddingStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubah Profile Saya"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/black"
                android:id="@+id/separatorLine"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/ic_policy"
                    app:tint="@color/grey" />
                <TextView
                    android:id="@+id/privacyTxt"
                    android:layout_marginTop="24dp"
                    android:paddingStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kebijakan Aplikasi"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:layout_marginTop="5dp"
                android:background="@color/black"
                android:id="@+id/separatorLine2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/ic_info"
                    app:tint="@color/grey" />

                <TextView
                    android:id="@+id/aboutAppTxt"
                    android:layout_marginTop="24dp"
                    android:paddingStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tentang Aplikasi"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/black"
                android:id="@+id/separatorLine3"/>

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/red"
                android:text="Logout"
                android:textAllCaps="false" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>